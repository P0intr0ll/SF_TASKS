package com.pointroll.Widgets {	import flash.text.TextField;	import flash.display.DisplayObject;	public class Debug {		static public var scope:DisplayObject;		static public var tf:TextField;		static public var mode:Boolean = false;				public function Debug(){}		static public function it(str:String):void {			trace(str);			if (tf && ((scope && scope.loaderInfo.url.indexOf("file") == 0) || mode)) {				tf.appendText("\n"+str);			}		}	}}