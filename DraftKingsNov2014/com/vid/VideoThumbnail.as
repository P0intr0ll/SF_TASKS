package com.vid {	import flash.display.MovieClip;	import flash.display.Loader;	import PointRollAPI_AS3.PointRoll;	import flash.net.URLRequest;	import flash.events.Event;	import flash.display.Bitmap;	import com.vid.LoadingIcon;	import flash.events.MouseEvent;		public class VideoThumbnail extends MovieClip {		private var main_mc:MovieClip;		private var loader:Loader = new Loader();		private var live:Boolean;		private var folder:String;		private var pr:PointRoll;		private var load_mc:LoadingIcon;				public function VideoThumbnail(main:MovieClip, img:String, lbl:String) {			main_mc = main as MovieClip;			pr = PointRoll.getInstance(this);			live = (main_mc.root.loaderInfo.url.indexOf('file') != 0);			folder = (live)? pr.absolutePath : 'images/';						load_mc = new LoadingIcon(10, 0xffffff)			load_mc.x = width * .5;			load_mc.y = height * .5;			load_mc.animGo();						//addEventListener(MouseEvent.CLICK, overOutHandler)			//addEventListener(MouseEvent.MOUSE_OVER, overOutHandler)			//addEventListener(MouseEvent.MOUSE_OUT, overOutHandler)			loader.contentLoaderInfo.addEventListener(Event.COMPLETE, imgLoadComplete)			loader.load(new URLRequest(folder + img));						txt.text = lbl;			//play_mc.visible = false;			mouseChildren = false;		}				private function imgLoadComplete(e:Event):void{			var bitmap:Bitmap = Bitmap(loader.content);			bitmap.smoothing = true;			bitmap.width = width;			bitmap.scaleY = bitmap.scaleX;						addChildAt(bitmap, 0);			load_mc.animStop();		}		//		private function overOutHandler(e:MouseEvent){//			play_mc.visible = (e.type == MouseEvent.MOUSE_OVER);//		}	}	}