package com.pointroll.scroller{	import flash.display.MovieClip;	import flash.display.Sprite;		import flash.events.Event;	import flash.events.EventDispatcher;		import com.pointroll.interfaces.IScroller;		import com.pointroll.events.PRScrollerEvents;	public class PRScroller extends EventDispatcher{		private var _scroller:IScroller;				public function PRScroller(items:Array, contentHolder:MovieClip, maskMc:Sprite, numberOfItems:int, howManyProductsToDisplay:int, infinite:Boolean = false) {			if(infinite){				_scroller = new PRInfiniteScroller(items, contentHolder, maskMc, numberOfItems, howManyProductsToDisplay);			}else{				_scroller = new PRBasicScroller(items, contentHolder, maskMc, numberOfItems, howManyProductsToDisplay);			}						addScrollerEvents();		}		public function autoScroll(duration:Number, howManyItems:int=0):void{			_scroller.autoScroll(duration,howManyItems);		}		public function reset(numberOfItems:int,howManyProductsToDisplay:int):void{			_scroller.reset(numberOfItems,howManyProductsToDisplay);		}		public function nextItem():void {						_scroller.nextItem();		}		public function previousItem():void {				_scroller.previousItem();		}		public function killAutoTimer():void{			_scroller.killAutoTimer()		}						private function addScrollerEvents():void{			_scroller.addEventListener(PRScrollerEvents.ON_PREVIOUS_ITEM, onScrollerEvent);			_scroller.addEventListener(PRScrollerEvents.ON_NEXT_ITEM, onScrollerEvent);			_scroller.addEventListener(PRScrollerEvents.ON_SCROLL_MAX_END, onScrollerEvent);			_scroller.addEventListener(PRScrollerEvents.ON_SCROLL_MIN_END, onScrollerEvent);				}		//EVENTS	 	private function onScrollerEvent(e:PRScrollerEvents):void{			trace("onScrollerEvent: " + e.type);			dispatchEvent(e);		}				// GETTERS SETTERS		public function get currentPage():Number{			return _scroller.currentPage;		}						public function set duration(d:Number):void{			_scroller.duration = d;		}		public function set padding(p:Number):void{			_scroller.padding = p;		}			}}