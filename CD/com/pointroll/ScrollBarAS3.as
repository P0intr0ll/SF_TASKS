package com.pointroll{	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.text.TextField;	import flash.events.MouseEvent;		public class ScrollBarAS3 extends MovieClip {		public var my_scrollbar:MakeScrollBar;		public var btnDown:MovieClip;		public var btnUp:MovieClip;		private var startY:Number						public function ScrollBarAS3() {			my_scrollbar = new MakeScrollBar(this, scrollIT );			startY = drag_mc.y			btnDown.addEventListener(MouseEvent.MOUSE_DOWN,scrolldwn)			btnDown.addEventListener(MouseEvent.MOUSE_UP, scrollEnd)						btnUp.addEventListener(MouseEvent.MOUSE_DOWN,scrollup)			btnUp.addEventListener(MouseEvent.MOUSE_UP, scrollEnd)						MovieClip(riskForm).mask = maskedView;		}				public function scrollIT( n:Number ) {						//this.scrollV = Math.round( ( scrollUImc.maxScrollV - 1 ) * n ) + 1;			//riskForm.y =  -n * (riskForm.height - stage.stageHeight) ;			riskForm.y =  -n * (riskForm.height - maskedView.height) ;			//trace( "????n: " +  riskForm.y  );		}				function scrollEnd(e:MouseEvent):void 		{			my_scrollbar.endScrolling();					}						function scrolldwn(e:MouseEvent):void 		{			var bott:Number = (track_mc.y + track_mc.height)- drag_mc.height - 34			trace("\n bott: " + bott)			trace("\n drag_mc.y: " + drag_mc.y)			if (drag_mc.y < bott) 			{				drag_mc.y += drag_mc.height/2;				my_scrollbar.startScrolling();			}else 			{				drag_mc.y = bott +34;								my_scrollbar.startScrolling();			}					}		function scrollup(e:MouseEvent):void 		{			if (drag_mc.y > startY) 			{				drag_mc.y -= drag_mc.height/2;				my_scrollbar.startScrolling();			}else 			{				drag_mc.y = startY;			}					}									}}